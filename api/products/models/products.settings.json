{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "price": {
      "required": true,
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "richtext"
    }
  }
}
