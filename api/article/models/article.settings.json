{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime"
    },
    "featureImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "relatedArticles": {
      "collection": "article"
    },
    "slug": {
      "type": "string",
      "required": false,
      "regex": "[^\\s][a-zA-Z\\-]*"
    },
    "comments": {
      "collection": "comments",
      "via": "article"
    },
    "categories": {
      "via": "articles",
      "collection": "categories"
    }
  }
}
